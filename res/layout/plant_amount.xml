<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id = "@+id/PlantLin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
       >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
       >
    
    <TextView
        android:id="@+id/TextFieldPlantA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  />
    
     <ImageView
        android:id="@+id/imageViewPlant"
        android:layout_below="@id/TextFieldPlantA"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
     </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/PlantLin"
        android:layout_marginLeft="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true" >
        
        <TextView
        android:id="@+id/TextFieldPlantB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wieviele Planzen siest du hier?" />
        
        
        <RadioGroup
        android:layout_below="@+id/TextFieldPlantB"
        android:id="@+id/radioPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
 
        <RadioButton
            android:id="@+id/radioNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl" 
            android:checked="true" />
 
        <RadioButton
            android:id="@+id/radioArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlÃ¤che" />
    </RadioGroup>
    
        <Button
             android:id="@+id/NumSubBut"
             android:layout_marginLeft="10sp"
             android:layout_below="@+id/TextFieldPlantB"
             android:layout_toRightOf="@+id/radioPlant"
              android:layout_alignTop="@+id/radioPlant"
              android:layout_alignBottom="@+id/stk"
              android:layout_alignParentRight="true"
             android:background="#0F000000"
             android:layout_width="wrap_content"
       		 android:layout_height="wrap_content"
             android:text="Abschicken"/>
    
       
            
        
        
        
     <RelativeLayout
         android:id="@+id/stk"
         android:layout_below="@+id/radioPlant"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        
        <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/count_type" />
        
        
         
         <TextView
        android:id="@+id/TextFieldAF"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/spinner1"
        android:textSize = "20sp"
         />
         
          <Spinner
        android:id="@+id/spinner2"
        android:layout_below="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/place_type" />
          
          
          
          
     </RelativeLayout>
        
     
      
      
    </RelativeLayout>
    
    
    </LinearLayout>
    
    
    
     <fragment
        android:id="@+id/map"
        android:layout_marginLeft="2dp"
     	android:layout_marginRight="2dp"
     	android:layout_marginTop="2dp"
     	android:layout_marginBottom="2dp"
        android:layout_below="@+id/PlantLin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.MapFragment" />
</RelativeLayout>