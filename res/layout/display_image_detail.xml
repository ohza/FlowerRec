<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linlay"
    
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     
    <LinearLayout
        
    
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     
        <ImageView
            android:id="@+id/imagDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
     		
            >
           
        </ImageView>
        
     <ImageView
            android:id="@+id/madeDisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            
             >
     </ImageView>
     
   
        
     </LinearLayout>
     
    
     
     	  <TextView
            android:id="@+id/plantInfo"
            android:layout_marginLeft="3dp"
     		android:layout_marginRight="3dp"
     		android:layout_marginTop="1dp"
     		android:layout_marginBottom="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines = "14"
            android:scrollbars = "vertical">
           </TextView>
           
     
     <RelativeLayout
     android:layout_marginLeft="1px"
     android:layout_marginRight="1px"
     android:layout_marginTop="1px"
     android:layout_marginBottom="5px"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal" >
     
           <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom = "true"
            android:textSize = "23sp"
            android:text="@string/your_flower_ask">
           </TextView>
 
    <ImageButton
        android:id="@+id/yesButton1"
        android:layout_toLeftOf = "@+id/noButton1"
        android:layout_alignParentBottom = "true"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/yes_s" />
    
    <ImageButton
        android:id="@+id/noButton1"
        android:layout_alignParentRight = "true"
        android:layout_alignParentBottom = "true"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:src="@drawable/no_s" />
 
</RelativeLayout>
    
        
   
        
        

     
 </LinearLayout>